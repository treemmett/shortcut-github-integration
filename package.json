{
  "main": "build/src/index.js",
  "scripts": {
    "start": "functions-framework --source=build/src/ --target=main",
    "watch": "concurrently \"tsc -w\" \"nodemon --watch ./build/ --exec npm run start\"",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "pretest": "yarn run compile",
    "posttest": "yarn run lint",
    "deploy": "gcloud functions deploy shortcut-github-integration --runtime nodejs16 --entry-point=main --trigger-http --allow-unauthenticated"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^3.1.2",
    "@types/express": "^4.17.14",
    "@types/node": "^14.11.2",
    "concurrently": "^7.4.0",
    "gts": "^3.1.1",
    "nodemon": "^2.0.20",
    "typescript": "~4.7.0"
  }
}
